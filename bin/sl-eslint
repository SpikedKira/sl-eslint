#!/usr/bin/env sh

ARGS="$*"

run_linter () {
    $ROOT_DIR/node_modules/.bin/eslint \
        --config $ROOT_DIR/.eslintrc \
        --rulesdir $ROOT_DIR/lib/rules \
        $ARGS

    exit $?
}

PKG_NAME="sl-eslint"

ROOT_DIR="`npm root`/$PKG_NAME"
if [ -d $ROOT_DIR ]; then
    run_linter
fi

ROOT_DIR="`npm root -g`/$PKG_NAME"
if [ -d $ROOT_DIR ]; then
    run_linter
fi

exit 1
